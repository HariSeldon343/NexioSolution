# Configurazione Produzione - Nexio Platform con Cloudflare
# Deployment su https://app.nexiosolution.it/piattaforma-collaborativa

# Application URLs
APP_URL=https://app.nexiosolution.it/piattaforma-collaborativa
APP_ENV=production
APP_DEBUG=false

# OnlyOffice Configuration
ONLYOFFICE_DS_URL=https://app.nexiosolution.it/onlyoffice/
ONLYOFFICE_JWT_ENABLED=true
ONLYOFFICE_JWT_SECRET=change_this_to_secure_secret_in_production

# Database Configuration (Production)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nexiosol
DB_USERNAME=nexio_prod
DB_PASSWORD=secure_password_here

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.nexiosolution.it
MAIL_PORT=587
MAIL_USERNAME=noreply@nexiosolution.it
MAIL_PASSWORD=email_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@nexiosolution.it
MAIL_FROM_NAME="Nexio Platform"

# Security Settings
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
CSRF_PROTECTION=true

# Cloudflare Settings
CLOUDFLARE_TUNNEL=true
CLOUDFLARE_PROXY=true
TRUSTED_PROXIES=*

# File Storage
STORAGE_PATH=/var/www/storage
MAX_UPLOAD_SIZE=100M

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# Monitoring
LOG_LEVEL=warning
LOG_CHANNEL=daily
SENTRY_DSN=

# Feature Flags
ENABLE_2FA=true
ENABLE_API_RATE_LIMITING=true
ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=9001

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30