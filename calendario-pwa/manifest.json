  "shortcuts": [
    {
      "name": "Nuovo Evento",
      "short_name": "Nuovo",
      "description": "Crea un nuovo evento",
      "url": "./index.html?action=new",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Vista Mese",
      "short_name": "Mese",
      "description": "Visualizza calendario mensile",
      "url": "./index.html?view=month",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Vista Giorno",
      "short_name": "Giorno",
      "description": "Visualizza calendario giornaliero",
